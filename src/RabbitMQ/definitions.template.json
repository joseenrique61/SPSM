{
    "vhosts": [
        {
            "name": "dev"
        }
    ],
    "users": [
        {
            "name": "__RABBITMQ_USERNAME__",
            "password_hash": "__RABBITMQ_PASSWORD_HASH__",
            "hashing_algorithm": "rabbit_password_hashing_sha256",
            "tags": "management"
        }
    ],
    "permissions": [
        {
            "user": "__RABBITMQ_USERNAME__",
            "vhost": "dev",
            "configure": ".*",
            "write": ".*",
            "read": ".*"
        }
    ],
    "exchanges": [
        {
            "name": "payment.exchange",
            "vhost": "dev",
            "type": "topic",
            "durable": true,
            "auto_delete": false,
            "internal": false,
            "arguments": {}
        },
        {
            "name": "inventory.exchange",
            "vhost": "dev",
            "type": "topic",
            "durable": true,
            "auto_delete": false,
            "internal": false,
            "arguments": {}
        }
    ],
    "queues": [
        {
            "name": "notification.alerts",
            "vhost": "dev",
            "durable": true,
            "auto_delete": false,
            "arguments": {}
        },
        {
            "name": "inventory.changes",
            "vhost": "dev",
            "durable": true,
            "auto_delete": false,
            "arguments": {}
        }
    ],
    "bindings": [        
        {
            "source": "inventory.exchange",
            "vhost": "dev",
            "destination": "inventory.changes",
            "destination_type": "queue",
            "routing_key": "inventory.*.*",
            "arguments": {}
        },
        {
            "source": "payment.exchange",
            "vhost": "dev",
            "destination": "notification.send-notification",
            "destination_type": "queue",
            "routing_key": "*.payment.confirmed",
            "arguments": {}
        } 
    ]
}